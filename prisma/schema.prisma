// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  email       String        @unique
  name        String?
  alias       String?
  person      Person        @relation(fields: [personId], references: [id])
  personId    String        @db.ObjectId
  posts       Post[]
  groups      UserGroup[]
  Appointment Appointment[]
}

type Address {
  street String
  city   String
  state  String
  zip    String
}

model Post {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug     String    @unique
  title    String
  alias    String?
  body     String
  author   User      @relation(fields: [authorId], references: [id])
  authorId String    @db.ObjectId
  comments Comment[]
}

model Comment {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  alias   String?
  post    Post    @relation(fields: [postId], references: [id])
  postId  String  @db.ObjectId
}

model Account {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  email        String        @unique
  password     String
  firstName    String?
  lastName     String?
  role         String?
  // add any other fields you need
  RefreshToken RefreshToken?
}

model Branch {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  alias       String?
  address     Address?
  warehouses  Warehouse[]
  Appointment Appointment[]
}

model Warehouse {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String   @unique
  address  Address?
  alias    String?
  branch   Branch?  @relation(fields: [branchId], references: [id])
  branchId String   @db.ObjectId
}

model RefreshToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  account   Account? @relation(fields: [userId], references: [id])
  userId    String   @unique @db.ObjectId
}

model Supplier {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  alias   String?
  address Address
  email   String
  phone   String
}

model Customer {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  alias        String?
  email        String        @unique
  phone        String        @unique
  address      Address?
  orders       Order[]
  appointments Appointment[]
  checkins     Checkin[]
}

model Order {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  orderDate    DateTime      @default(now())
  customer     Customer      @relation(fields: [customerId], references: [id])
  customerId   String        @db.ObjectId
  totalAmount  Int
  status       String
  orderDetails OrderDetail[]
}

model OrderDetail {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  order       Order   @relation(fields: [orderId], references: [id])
  orderId     String  @db.ObjectId
  quantity    Int
  unitPrice   Float
  totalAmount Float
  Item        Item?   @relation(fields: [itemId], references: [id])
  itemId      String? @db.ObjectId
}

// Generate customer appointment
model Appointment {
  id                  String            @id @default(auto()) @map("_id") @db.ObjectId
  customerId          String            @db.ObjectId
  customer            Customer          @relation(fields: [customerId], references: [id])
  appointmentTypeId   String            @db.ObjectId
  appointmentType     AppointmentType   @relation(fields: [appointmentTypeId], references: [id])
  appointmentTime     DateTime
  loop                Boolean?
  branchId            String            @db.ObjectId
  branch              Branch            @relation(fields: [branchId], references: [id])
  items               Item[]
  requestedStaffId    String            @db.ObjectId
  staff               User              @relation(fields: [requestedStaffId], references: [id])
  appointmentStatusId String            @db.ObjectId
  appointmentStatus   AppointmentStatus @relation(fields: [appointmentStatusId], references: [id])
  createdBy           String?
  createdDate         DateTime
  description         String?
}

model AppointmentType {
  id                  String             @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  alias               String
  description         String?
  AppointmentConfig   AppointmentConfig? @relation(fields: [appointmentConfigId], references: [id])
  appointmentConfigId String?            @db.ObjectId
  Appointment         Appointment[]
}

model AppointmentStatus {
  id                  String             @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  alias               String
  color               String?
  description         String?
  Appointment         Appointment[]
  AppointmentConfig   AppointmentConfig? @relation(fields: [appointmentConfigId], references: [id])
  appointmentConfigId String?            @db.ObjectId
}

model AppointmentConfig {
  id                     String              @id @default(auto()) @map("_id") @db.ObjectId
  timeFrameId            String?
  appointmentTimeframeId String?
  viewConfigId           String?
  appointmentTypes       AppointmentType[]
  appointmentStatus      AppointmentStatus[]
  checkByStaff           Boolean
  displayByStaff         Boolean
  displayByBranch        Boolean
  displayDateByStaff     Boolean
  autoChange             Boolean
  changeTo               String?
}

model Timeframe {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  open        String?
  close       String?
  period      String?
  description String?
}

model AppointmentTimeframe {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  min Int?
  max Int?
}

model ViewConfig {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
}

// Generate customer checkin
model Checkin {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  customer    Customer @relation(fields: [customerId], references: [id])
  customerId  String   @db.ObjectId
  checkinDate DateTime @default(now())
  temperature Float
  symptoms    String?
}

// Generate commission model
model Commission {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  item             Item            @relation(fields: [itemId], references: [id])
  itemId           String          @db.ObjectId
  userGroupId      String
  startDate        DateTime
  endDate          DateTime
  CommissionType   CommissionType? @relation(fields: [commissionTypeId], references: [id])
  commissionTypeId String?         @db.ObjectId
}

// Generate item and item type model
model ItemType {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  alias       String?
  description String?
  items       Item[]
}

model Item {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  alias         String?
  description   String?
  itemType      ItemType      @relation(fields: [itemTypeId], references: [id])
  itemTypeId    String        @db.ObjectId
  OrderDetail   OrderDetail[]
  Commission    Commission[]
  Lot           Lot[]
  Inventory     Inventory[]
  Appointment   Appointment?  @relation(fields: [appointmentId], references: [id])
  appointmentId String?       @db.ObjectId
}

// Generate commission type with some props like type, value
model CommissionType {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  alias       String?
  description String?
  value       Float
  commissions Commission[]
}

model Lot {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  alias       String?
  description String?
  item        Item        @relation(fields: [itemId], references: [id])
  itemId      String      @db.ObjectId
  quantity    Int
  price       Float
  importDate  DateTime
  expiryDate  DateTime
  Inventory   Inventory[]
}

model Inventory {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  item       Item     @relation(fields: [itemId], references: [id])
  itemId     String   @db.ObjectId
  expiryDate DateTime
  lot        Lot      @relation(fields: [lotId], references: [id])
  lotId      String   @db.ObjectId
  quantity   Int
}

model Person {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  address   Address?
  users     User[]
}

// Generate role model
model Role {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String      @unique
  alias     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  roleGroup RoleGroup[]
}

// Generate group model
model Group {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String      @unique
  alias      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  users      UserGroup[]
  roleGroups RoleGroup[]
}

model UserGroup {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  user    User   @relation(fields: [userId], references: [id])
  userId  String @db.ObjectId
  group   Group  @relation(fields: [groupId], references: [id])
  groupId String @db.ObjectId
}

// Define a model to relate between role and group
model RoleGroup {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    String   @db.ObjectId
  group     Group    @relation(fields: [groupId], references: [id])
  groupId   String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unit {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  alias       String?
  description String?
}

model Configuration {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  model       String
  alias       String?
  status      Boolean
  description String?
}

model ItemCategory {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  priority    Int?
  alias       String?
  description String?
}
